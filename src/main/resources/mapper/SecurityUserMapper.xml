<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lll44556.gulimall.auth.mapper.SecurityUserMapper">


    <resultMap id="SecurityUserResultMap" type="top.lll44556.lll.auth.adapter.SecurityUser">
        <id property="user.id" column="id" jdbcType="BIGINT"/>
        <association property="user" javaType="top.lll44556.lll.auth.entity.User">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="orgId" column="org_id" jdbcType="INTEGER"/>
            <result property="enabled" column="enabled" jdbcType="TINYINT"/>
            <result property="phone" column="phone" jdbcType="VARCHAR"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        </association>
        <collection property="authorities" ofType="org.springframework.security.core.authority.SimpleGrantedAuthority" column="url" jdbcType="VARCHAR"/>
    </resultMap>


    <select id="selectByUsername" resultMap="SecurityUserResultMap">
        SELECT u.id, u.username, u.password, u.org_id, u.enabled, u.phone, u.email
             , m.url
        FROM `user` u
            LEFT JOIN user_role ur
            ON u.id=ur.user_id
            LEFT JOIN role_menu rm
            ON ur.role_id=rm.role_id
            LEFT JOIN menu m
            ON rm.menu_id=m.id
        WHERE username=#{username}
    </select>
</mapper>
